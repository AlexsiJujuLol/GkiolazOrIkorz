-- Script Simplifié et Complet pour Blox Fruits
-- Made by vietorgkiolaz

-- Vérification du support de l'exécuteur
local supportedExecutors = {"Synapse X", "Krnl", "Fluxus"}
local executor = identifyexecutor and identifyexecutor() or "Unknown"

local isSupported = false
for _, exec in ipairs(supportedExecutors) do
    if executor == exec then
        isSupported = true
        break
    end
end

if isSupported then
    print("Supporté par " .. executor .. ". Profitez-en!")
else
    print("Non supporté par cet exécuteur.")
end

-- Chargement de la bibliothèque Fluent UI
local Fluent = loadstring(game:HttpGet("https://raw.githubusercontent.com/Advxziv/Fluent-UI-Library/main/Library.lua"))()
local Window = Fluent:CreateWindow({
    Name = "Blox Fruits Simplified UI",
    LoadingTitle = "Chargement du Script",
    LoadingSubtitle = "by vietorgkiolaz",
    ConfigurationSaving = { Enabled = true, FolderName = "BloxFruitsScripts", FileName = "UI_Config" }
})

-- Variables Globales
local player = game.Players.LocalPlayer
local isAutoFarmEnabled = false
local isAutoFarmNearestEnabled = false
local autoFarmDelay = 1
local m1Delay = 0.1

-- Fonction d'Auto Farm
local function autoFarm()
    while isAutoFarmEnabled do
        wait(autoFarmDelay)
        -- Implémentez la logique de l'Auto Farm ici
    end
end

-- Fonction d'Auto Farm Nearest
local function autoFarmNearest()
    while isAutoFarmNearestEnabled do
        wait(autoFarmDelay)
        -- Implémentez la logique de l'Auto Farm Nearest ici
    end
end

-- Téléportations
local function teleportToSea1()
    player.Character.HumanoidRootPart.CFrame = CFrame.new(1056, 18, 1426)
end

local function teleportToSea2()
    player.Character.HumanoidRootPart.CFrame = CFrame.new(5673.3, 100, -1512.4)
end

-- Création des Tabs et Sections
local MainTab = Window:CreateTab("Main", 4483362458) -- Icon ID
local TeleportSection = MainTab:CreateSection("Teleport Options")

local BloxFruitTab = Window:CreateTab("Blox Fruit", 4483362458)
local BloxFruitSection = BloxFruitTab:CreateSection("Blox Fruit Options")

-- UI Blox Fruit
BloxFruitSection:CreateToggle("Auto-Farm", "Active l'Auto-Farm", function(state)
    isAutoFarmEnabled = state
    if state then autoFarm() end
end)

BloxFruitSection:CreateToggle("Auto-Farm Nearest", "Active l'Auto-Farm le plus proche", function(state)
    isAutoFarmNearestEnabled = state
    if state then autoFarmNearest() end
end)

BloxFruitSection:CreateSlider("Auto Farm Delay", "Définir le délai de l'Auto Farm (secondes)", 0.1, 5, autoFarmDelay, function(value)
    autoFarmDelay = value
end)

BloxFruitSection:CreateSlider("M1 Delay", "Définir le délai de M1 (secondes)", 0.1, 2, m1Delay, function(value)
    m1Delay = value
end)

-- UI Téléportations
TeleportSection:CreateButton("Téléportation Sea 1", function()
    teleportToSea1()
end)

TeleportSection:CreateButton("Téléportation Sea 2", function()
    teleportToSea2()
end)

-- Crédit
local CreditTab = Window:CreateTab("Credits", 4483362458)
CreditTab:CreateSection("Made by vietorgkiolaz")
CreditTab:CreateLabel("UI Fluent Library")
