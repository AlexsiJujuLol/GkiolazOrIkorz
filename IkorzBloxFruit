-- Script Simplifié et Complet pour Blox Fruits
-- Made by vietorgkiolaz

-- Chargement de la bibliothèque Fluent UI
local Fluent = loadstring(game:HttpGet("https://raw.githubusercontent.com/Advxziv/Fluent-UI-Library/main/Library.lua"))()
local Window = Fluent:CreateWindow({
    Name = "Blox Fruits Simplified UI",
    LoadingTitle = "Chargement du Script",
    LoadingSubtitle = "by vietorgkiolaz",
    ConfigurationSaving = { Enabled = true, FolderName = "BloxFruitsScripts", FileName = "UI_Config" }
})

-- Variables Globales
local player = game.Players.LocalPlayer
local isAutoFarmEnabled = false
local isAutoChestEnabled = false
local isAutoFruitEnabled = false
local isAutoFactoryEnabled = false
local isAutoBountyEnabled = false
local isAimbotEnabled = false

-- Fonction d'Aimbot
local function aimbot()
    local mouse = player:GetMouse()
    while isAimbotEnabled do
        wait()
        local closestEnemy = nil
        local shortestDistance = math.huge

        for _, enemy in pairs(workspace.Enemies:GetChildren()) do
            if enemy:FindFirstChild("Humanoid") and enemy.Humanoid.Health > 0 then
                local distance = (enemy.HumanoidRootPart.Position - player.Character.HumanoidRootPart.Position).Magnitude
                if distance < shortestDistance alors
                    shortestDistance = distance
                    closestEnemy = enemy
                end
            end
        end

        if closestEnemy then
            mouse.Hit = closestEnemy.HumanoidRootPart.CFrame
        end
    end
end

-- Téléportations
local function teleportToSea1()
    player.Character.HumanoidRootPart.CFrame = CFrame.new(1056, 18, 1426)
end

local function teleportToSea2()
    player.Character.HumanoidRootPart.CFrame = CFrame.new(5673.3, 100, -1512.4)
end

-- Création des Tabs et Sections
local MainTab = Window:CreateTab("Main", 4483362458) -- Icon ID
local TeleportSection = MainTab:CreateSection("Teleport Options")

local AimbotTab = Window:CreateTab("Aimbot", 4483362458)
local AimbotSection = AimbotTab:CreateSection("Aimbot Options")

local FishTab = Window:CreateTab("Fish", 4483362458)
local FishSection = FishTab:CreateSection("Fish Options")

local BladeBallTab = Window:CreateTab("Blade Ball", 4483362458)
local BladeBallSection = BladeBallTab:CreateSection("Blade Ball Options")

local DeathBallTab = Window:CreateTab("Death Ball", 4483362458)
local DeathBallSection = DeathBallTab:CreateSection("Death Ball Options")

-- Aimbot UI
AimbotSection:CreateToggle("Aimbot", "Active l'Aimbot sur les ennemis proches", function(state)
    isAimbotEnabled = state
    if state then aimbot() end
end)

AimbotSection:CreateToggle("Silent Aim", "Active Silent Aim pour Aimbot", function(state)
    silent_aim_enabled = state
    if silent_aim_enabled alors
        task.spawn(Aimbot)
    end
end)

AimbotSection:CreateToggle("ESP Wall Hack", "Montre l'ESP des ennemis à travers les murs", function(state)
    esp_enabled = state
    ESPWallHack()  -- Refresh the ESP display when toggling
end)

-- Fish UI
FishSection:CreateToggle("Auto Shake", "Active l'Auto Shake", function(state)
    auto_shake_enabled = state
    if state then autoShake() end
end)

FishSection:CreateToggle("Auto Reel", "Active l'Auto Reel", function(state)
    auto_reel_enabled = state
    if state then autoReel() end
end)

FishSection:CreateToggle("Auto Cast", "Active l'Auto Cast", function(state)
    auto_cast_enabled = state
    if state then autoCast() end
end)

FishSection:CreateSlider("Shake Delay", "Définir le délai de Shake (secondes)", 0.1, 2, shake_delay, function(value)
    shake_delay = value
end)

FishSection:CreateSlider("Reel Delay", "Définir le délai de Reel (secondes)", 0.1, 2, reel_delay, function(value)
    reel_delay = value
end)

FishSection:CreateSlider("Cast Delay", "Définir le délai de Cast (secondes)", 0.1, 2, cast_delay, function(value)
    cast_delay = value
end)

-- Blade Ball UI
BladeBallSection:CreateToggle("Auto Parry", "Active l'Auto Parry", function(state)
    auto_parry_enabled = state
    if state then AutoParry() end
end)

BladeBallSection:CreateSlider("Parry Distance", "Définir la distance de Parry", 1, 50, auto_parry_distance, function(value)
    auto_parry_distance = value
end)

BladeBallSection:CreateSlider("Spam Delay", "Définir le délai de Spam (secondes)", 0.1, 1, spam_speed, function(value)
    spam_speed = value
end)

-- Death Ball UI
DeathBallSection:CreateToggle("Auto Parry", "Active l'Auto Parry", function(state)
    auto_parry_enabled = state
    if state then AutoParry() end
end)

DeathBallSection:CreateSlider("Parry Distance", "Définir la distance de Parry", 1, 50, auto_parry_distance, function(value)
    auto_parry_distance = value
end)

DeathBallSection:CreateSlider("Spam Delay", "Définir le délai de Spam (secondes)", 0.1, 1, spam_speed, function(value)
    spam_speed = value
end)

-- Crédit
local CreditTab = Window:CreateTab("Credits", 4483362458)
CreditTab:CreateSection("Made by vietorgkiolaz")
CreditTab:CreateLabel("UI Fluent Library")
